{
  "name": "geoshooter-twin-stick-arena",
  "version": "1.0.0",
  "description": "A modern Geometry Wars-inspired twin-stick shooter built with HTML5 Canvas",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server -p 8080 -c-1",
    "dev": "npx http-server -p 8080 -c-1 --cors",
    "lint": "npx eslint src/",
    "format": "npx prettier --write \"**/*.{js,html,css,md}\"",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "build": "npm run format && npm run lint",
    "validate": "npm run build && npm run test"
  },
  "keywords": [
    "game",
    "html5",
    "canvas",
    "javascript",
    "twin-stick-shooter",
    "geometry-wars",
    "arcade"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-jest": "^30.0.4",
    "eslint": "^8.57.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/geoshooter-twin-stick-arena.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/geoshooter-twin-stick-arena/issues"
  },
  "homepage": "https://github.com/yourusername/geoshooter-twin-stick-arena#readme",
  "engines": {
    "node": ">=16.0.0"
  }
}
